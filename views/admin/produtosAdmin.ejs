<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="../css/produtosAdmin.css">
    <title>Admin - PRODUTOS</title>
</head>
<body>
    <%- include('../components/header') %>

    <main>
        <div>
            <a href="/admin/cadastro-produto">
                <button id="button-cadastro">Cadastrar Novo Produto</button>
            </a>
        </div>
        <table>
            <thead>
                <tr>
                    <th>id</th>
                    <th>nome</th>
                    <th>pet</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% produtos.forEach(produto => { %>
                <tr>
                    <td><%= produto.id %></td>
                    <td><%= produto.nome %></td>
                    <td><%= produto.pet %></td>
                    <td>
                        <form
                            method="POST"
                            action="/deletar-produto/<%= produto.id %>?_method=DELETE"
                        >
                            <button id="button-delete" type="submit">Excluir</button>
                        </form>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </main>

    <%- include('../components/footer') %>
</body>
</html>